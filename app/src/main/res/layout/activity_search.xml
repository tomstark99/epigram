<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/place_holders"
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_background">

            <ImageView
                    android:id="@+id/search_back"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <EditText
                    android:id="@+id/search_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:minHeight="?actionBarSize"
                    android:padding="@dimen/appbar_padding"
                    android:layout_weight="1"
                    android:hint="Search epigram"
                    android:textColorHint="@color/whitehint"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/whitehint"
                    android:lines="1"
                    android:inputType="text"
                    android:imeOptions="actionSearch">
                <requestFocus/>
            </EditText>

            <ImageView
                    android:id="@+id/search_button_in_search_activity"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_search_black_24dp"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/element_padding"
            android:paddingBottom="@dimen/large_padding"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="right">

    </androidx.recyclerview.widget.RecyclerView>

