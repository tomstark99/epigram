<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/place_holders"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="@dimen/appbar_height"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        app:elevation="0dp">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/element_padding_half"
            android:layout_marginStart="@dimen/element_padding_half"
            android:layout_marginEnd="@dimen/element_padding_half"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:background="@drawable/tab_s_background">
            <ImageView
                android:id="@+id/search_back"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:padding="12dp"
                style="@style/SelectableItemBackground"/>

            <EditText
                android:id="@+id/search_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/tiny_padding"
                android:layout_weight="1"
                android:hint=" Search by title or author"
                android:textColorHint="@color/button_tint"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/transparent"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionSearch">
                <requestFocus/>
            </EditText>
            <ImageView
                android:id="@+id/search_button_in_search_activity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:src="@drawable/ic_search_black_24dp"
                style="@style/SelectableItemBackground"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:translationZ="-1dp">
        <ProgressBar
            android:id="@+id/search_progress"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/search_progress"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh"
            android:elevation="1dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/appbar_height"
                android:paddingBottom="@dimen/large_padding"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="right"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/search_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_height"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:visibility="visible"
            android:elevation="0dp">
            <ImageView
                android:id="@+id/search_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_search_black_black_24dp"/>
            <TextView
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Epigram"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/element_padding"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_no_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_height"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/search_image_no_result"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/ic_close_black_24dp"/>
            <TextView
                android:id="@+id/search_text_no_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No results found"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/element_padding"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_something_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_height"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/tab_image_something_wrong"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:src="@drawable/ic_cloud_off_black_24dp"/>

            <TextView
                android:id="@+id/tab_text_something_wrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Something went wrong"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/element_padding"/>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>