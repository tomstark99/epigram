<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="placeholder_progress">
        <item name="colorAccent">@color/placeholderProgress</item>
    </style>
    <style name="search_progress">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/placeholderProgress</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SettingsCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tiny_padding</item>
        <item name="android:layout_marginStart">@dimen/tiny_padding</item>
        <item name="android:layout_marginEnd">@dimen/tiny_padding</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>
